{% extends "mailing/layout.html.twig" %}

{% block body %}
<table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
	<tbody>
		<tr>
			<td align="left" valign="top" style="font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px;  position: relative;" class="editor mce-content-body" mc:edit="text-title" id="mce_4">
				<div style="font-size: 24px; line-height: 32px;">Hola.</div>
				Se registró un nuevo usuario:
			</td>
		</tr>
		<tr>
			<td align="left" valign="top" style="font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative;" class="editor mce-content-body" mc:edit="text-inner" id="mce_5">
				&nbsp;
			</td>
		</tr>
		<tr>
			<td align="left" valign="top" style="font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative;" class="editor mce-content-body" mc:edit="text-inner" id="mce_5">
				<table>
					<tr>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 5px 5px 25px; vertical-align: top;"><b>Campaña:</b></td>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 25px 5px 5px; vertical-align: top;">{{ campaign }}</td>
					</tr>
					<tr>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 5px 5px 25px; vertical-align: top;"><b>Nombre:</b></td>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 25px 5px 5px; vertical-align: top;">{{ name }}</td>
					</tr>
					<tr>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 5px 5px 25px; vertical-align: top;"><b>Correo electrónico:</b></td>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 25px 5px 5px; vertical-align: top;"><a href="mailto:{{ email }}">{{ email }}</a></td>
					</tr>
					<tr>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 5px 5px 25px; vertical-align: top;"><b>Teléfono:</b></td>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 25px 5px 5px; vertical-align: top;">{{ phone }}</td>
					</tr>
					<tr>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 5px 5px 25px; vertical-align: top;"><b>Mensaje:</b></td>
						<td style="margin: 0; font-family: Arial, Helvetica, sans-serif; font-size: 14px; color: rgb(61, 57, 57); font-weight: normal; line-height: 20px; position: relative; padding: 5px 25px 5px 5px; vertical-align: top;">{{ message|nl2br }}</td>
					</tr>
				</table>
			</td>
		</tr>
	</tbody>
</table>
{% endblock %}